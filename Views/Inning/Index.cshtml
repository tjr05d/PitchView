@model pitch_app.Models.Inning
@inject pitch_app.Models.Services.InningDropdown inningList 

@{
    ViewData["Title"] = "Index";
}
    
<h2>Index</h2>
@Html.DropDownListFor(m => m.Number,
           inningList.GetInnings().Select(i => 
                new SelectListItem() { Text = i.FormatName()}))

<div >
    @await Component.InvokeAsync("AtBatList", new { inning_num = 9, top = true })
</div>
<p> @Html.DisplayFor(model => model.Number)</p>
<p> @Html.DisplayFor(model => model.Top)</p>

@{
    @Html.Partial("AtBats", Model);    
}

